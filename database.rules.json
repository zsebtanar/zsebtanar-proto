{
  "rules": {
    // admin can read and write everything
    ".read": "auth.token.role === 1000",
    ".write": "auth.token.role === 1000",

    "users": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "auth != null && auth.uid == $uid"
      }
    },

    "classifications": {
      ".read": true
    },

    "exercise": {
      "private": {
        "$exerciseId": {
          ".read": "auth.token.role > 0",
          ".write": false
        }
      },
      "public": {
        "$exerciseId": {
          ".read": true,
          ".write": false
        }
      }
    },
    "feedback": {
      ".read": "auth.token.role > 0",
      ".write": false,
      "$feedbackId": {
        "description": {
          ".validate": "newData.isString() && newData.val().length < 1024"
        }
      }
    },
    "storage": {
      ".write": "auth.token.role === 1000",
      ".read": true
    },
    "rewards": {
      ".write": false,
      ".read": true
    },
    "userStatistics": {
      ".write": false,
      ".read": false
    }
  }
}
