{
  "name": "zsebtanar-firebase",
  "version": "1.0.0",
  "keywords": [
    "teaching",
    "mathematics",
    "students",
    "open-source",
    "non-profit",
    "hungarian"
  ],
  "description": "Zsebtanár egy matematika oktatást segítő interaktív weboldal magyar diákok számára",
  "homepage": "https://zsebtanar.hu",
  "bugs": "https://github.com/zsebtanar/zsebtanar-proto/issues",
  "private": true,
  "config": {
    "firebaseFunctionDepencies": [
      "algoliasearch",
      "cookie-parser",
      "cors",
      "express",
      "firebase-admin",
      "firebase-functions",
      "joi",
      "markdown-it",
      "markdown-it-katex",
      "ramda"
    ]
  },
  "dependencies": {
    "@types/react-redux": "^6.0.6",
    "@types/react-router": "^4.0.30",
    "algoliasearch": "3.30.0",
    "axios": "0.18.0",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "express": "4.16.3",
    "firebase": "5.3.1",
    "firebase-admin": "6.0.0",
    "firebase-functions": "2.0.5",
    "history": "4.7.2",
    "joi": "13.6.0",
    "markdown-it": "8.4.2",
    "markdown-it-katex": "git+https://git@github.com/maxinteger/markdown-it-katex.git#v2.2.0",
    "prop-types": "15.6.2",
    "ramda": "0.25.0",
    "react": "16.4.2",
    "react-async-script": "^0.11.1",
    "react-dnd": "5.0.0",
    "react-dnd-html5-backend": "5.0.1",
    "react-dom": "16.4.2",
    "react-ga": "2.5.3",
    "react-google-recaptcha": "^0.14.0",
    "react-input-autosize": "2.2.1",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-select": "1.2.1",
    "redux": "4.0.0",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0"
  },
  "devDependencies": {
    "@types/algoliasearch": "^3.27.5",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/joi": "^13.4.2",
    "@types/node": "^10.7.0",
    "@types/ramda": "^0.25.36",
    "@types/raven": "2.5.1",
    "@types/react": "16.4.10",
    "@types/react-dom": "16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "awesome-typescript-loader": "5.2.0",
    "bootstrap": "4.1.3",
    "css-loader": "1.0.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "firebase-tools": "4.1.1",
    "html-webpack-harddisk-plugin": "0.2.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "inline-chunk-manifest-html-webpack-plugin": "^2.0.0",
    "jest": "^23.5.0",
    "lint-staged": "7.2.2",
    "mock-require": "3.0.2",
    "node-sass": "4.9.3",
    "prettier": "1.14.2",
    "react-test-renderer": "16.4.2",
    "sass-loader": "7.1.0",
    "shelljs": "0.8.2",
    "source-map-loader": "0.2.4",
    "style-loader": "0.22.1",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "3.0.1",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.16.5",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5"
  },
  "scripts": {
    "test": "jest test",
    "start": "npm run ::client-dev",
    "build": "NODE_ENV=production npm run ::server-build && npm run ::client-build",
    "predeploy": "npm run test",
    "deploy": "npm run build && firebase --project=test deploy",
    "postbuild": "node build/post-build",
    "start:server": "npm run ::server-build && firebase serve --only functions",
    "deploy:server": "npm run ::server-build && ./node_modules/.bin/firebase --project=test deploy --only functions",
    "server:shell": "npm run build && firebase functions:shell",
    "server:logs": "firebase functions:log",
    "lint": "tslint --project tsconfig.json",
    "precommit": "lint-staged",
    "::client-dev": "webpack-dev-server --progress --config ./build/webpack.client.js",
    "::client-build": "NODE_ENV=production webpack -p --config ./build/webpack.client.js",
    "::server-build": "node build/prepare-server && NODE_ENV=production webpack -p --display-error-details --config ./build/webpack.server.js"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^client-common(.*)$": "<rootDir>/src/client-common/$1",
      "^shared(.*)$": "<rootDir>/src/shared/$1",
      "^server(.*)$": "<rootDir>/src/server/$1"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "semi": true,
          "printWidth": 120
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.{css}": [
      "prettier --write",
      "git add"
    ]
  }
}
