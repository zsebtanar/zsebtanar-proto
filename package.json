{
  "name": "zsebtanar-firebase",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "algoliasearch": "^3.24.5",
    "axios": "0.17.0",
    "history": "^4.7.2",
    "markdown-it": "8.4.0",
    "markdown-it-katex": "git+https://git@github.com/maxinteger/markdown-it-katex.git#2.1.0",
    "prop-types": "15.6.0",
    "ramda": "0.25.0",
    "react": "16.2.0",
    "react-dom": "16.0.0",
    "react-input-autosize": "^2.0.1",
    "react-redux": "^5.0.6",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "react-select": "^1.0.0-rc.10",
    "redux": "3.7.2",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "7.1.2",
    "babel-plugin-ramda": "^1.4.3",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bootstrap": "^4.0.0-beta",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "firebase-tools": "^3.13.1",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.2.3",
    "mocha": "^4.0.1",
    "mock-require": "^2.0.2",
    "node-sass": "^4.5.3",
    "prettier": "^1.7.4",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "shelljs": "^0.7.8",
    "source-map-loader": "0.2.2",
    "style-loader": "^0.19.0",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.2"
  },
  "scripts": {
    "test": "jest test",
    "devstart": "npm run prebuild",
    "dev": "webpack-dev-server --progress --config ./build/webpack.config.js",
    "start": "npm run dev",
    "build-functions":
      "babel --presets=es2015 --plugins=babel-plugin-transform-object-rest-spread 'functions' --out-dir 'bin/functions' --presets=es2015 --copy-files --ignore 'node_modules'",
    "install-functions-deps": "cd bin/functions && npm --production=false install",
    "build-app": "webpack -p --config ./build/webpack.config.js",
    "prebuild": "node build/pre-build",
    "build": "NODE_ENV=production npm run build-app && npm run build-functions",
    "postbuild": "node build/post-build && npm run install-functions-deps",
    "predeploy": "npm run test",
    "serv-functions": "npm run build-functions && npm run install-functions-deps && node bin/functions/local-server.js",
    "deploy": "npm run build && firebase deploy",
    "deploy-functions":
      "npm run build-functions && npm run install-functions-deps && ./node_modules/.bin/firebase deploy --only functions",
    "precommit": "lint-staged",
    "local-server": "babel-node --presets es2015 --plugins transform-object-rest-spread ./functions/local-server.js"
  },
  "jest": {
    "roots": ["src", "functions", "test"]
  },
  "lint-staged": {
    "*.js": ["prettier --write --single-quote --trailing-comma=none --no-semi false --print-width 100", "git add"],
    "*.{json,css}": ["prettier --write --print-width 120", "git add"]
  }
}
