{
  "name": "zsebtanar-firebase",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "algoliasearch": "^3.27.1",
    "axios": "0.18.0",
    "history": "^4.7.2",
    "markdown-it": "^8.4.1",
    "markdown-it-katex": "git+https://git@github.com/maxinteger/markdown-it-katex.git#v2.2.0",
    "prop-types": "15.6.0",
    "ramda": "0.25.0",
    "react": "16.3.2",
    "react-cookie-consent": "^1.0.7",
    "react-dom": "16.3.2",
    "react-dnd": "^2.6.0",
    "react-dnd-html5-backend": "^2.6.0",
    "react-ga": "^2.5.0",
    "react-input-autosize": "^2.2.1",
    "react-redux": "^5.0.7",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "react-select": "^1.2.1",
    "redux": "^4.0.0",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-loader": "7.1.4",
    "babel-plugin-ramda": "^1.6.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "6.24.1",
    "bootstrap": "^4.1.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "firebase-tools": "^3.18.4",
    "html-webpack-harddisk-plugin": "^0.2.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "mocha": "^5.1.1",
    "mock-require": "^3.0.2",
    "node-sass": "^4.9.0",
    "prettier": "^1.12.1",
    "react-test-renderer": "^16.3.2",
    "sass-loader": "^7.0.1",
    "shelljs": "^0.8.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "scripts": {
    "test": "jest test",
    "devstart": "npm run prebuild",
    "dev": "webpack-dev-server --progress --config ./build/webpack.config.js",
    "start": "npm run dev",
    "build-functions": "babel --presets=es2015 --plugins=babel-plugin-transform-object-rest-spread 'functions' --out-dir 'bin/functions' --presets=es2015 --copy-files --ignore 'node_modules'",
    "install-functions-deps": "cd bin/functions && npm --production=false install",
    "build-app": "webpack -p --config ./build/webpack.config.js",
    "prebuild": "node build/pre-build",
    "build": "NODE_ENV=production npm run build-app && npm run build-functions",
    "postbuild": "node build/post-build && npm run install-functions-deps",
    "predeploy": "npm run test",
    "serv-functions": "npm run build-functions && npm run install-functions-deps && node bin/functions/local-server.js",
    "deploy": "npm run build && firebase --project=test deploy",
    "deploy-functions": "npm run build-functions && npm run install-functions-deps && ./node_modules/.bin/firebase --project=test deploy --only functions",
    "precommit": "lint-staged",
    "local-server": "babel-node --presets es2015 --plugins transform-object-rest-spread ./functions/local-server.js"
  },
  "jest": {
    "roots": [
      "src",
      "functions",
      "test"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --trailing-comma=none --no-semi false --print-width 100",
      "git add"
    ],
    "*.{css}": [
      "prettier --write --print-width 120",
      "git add"
    ]
  }
}
