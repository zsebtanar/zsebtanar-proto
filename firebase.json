{
  "hosting": {
    "cleanUrls": true,
    "trailingSlash": false,
    "public": "bin/app",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/package-lock.json",
      "**/yarn.lock"
    ],
    "headers": [
      {
        "source": "manifest.json",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/manifest+json"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=30672000"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|json)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      },
      {
        "source": "/admin/**",
        "headers": [
          {
            "key": "X-Robots-Tag",
            "value": "noindex"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Feature-Policy",
            "value": "fullscreen 'self'; geolocation 'none'; midi 'none'; notifications 'none'; push 'none'; sync-xhr 'none'; microphone 'none'; camera 'none'; magnetometer 'none'; gyroscope 'none'; speaker 'none'; vibrate 'none'; payment 'none'"
          },
          {
            "key": "Referrer-Policy",
            "value": "same-origin"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/:asset*.@(js|css|png|ico|json)",
        "destination": "/:asset"
      },
      {
        "source": "/robot.txt",
        "function": "/robot.txt"
      },
      {
        "source": "/sitemap.xml",
        "function": "/sitemap.xml"
      },
      {
        "source": "/google9ca33113ff814b8c.html",
        "destination": "/google9ca33113ff814b8c.html"
      },
      {
        "source": "/admin/**",
        "destination": "/admin.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "bin/functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
