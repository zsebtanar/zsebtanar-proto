{
  "hosting": {
    "cleanUrls": true,
    "trailingSlash": false,
    "public": "bin/app",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "**/package-lock.json", "**/yarn.lock"],
    "headers": [
      {
        "source": "manifest.json",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/manifest+json"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/:asset*.@(js|css|png|ico|json)",
        "destination": "/:asset"
      },
      {
        "source": "/admin/**",
        "destination": "/admin.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "bin/functions"
  },
  "database": {
    "rules": "database.rules.json"
  }
}
