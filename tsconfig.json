{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./bin",
    "sourceMap": true,
    "strict": false,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "removeComments": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react"
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": ["node_modules", "./src/**/*.spec.ts"]
}
